{
  "name": "detox",
  "description": "E2E tests and automation for mobile",
  "version": "12.3.0",
  "bin": {
    "detox": "local-cli/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wix/Detox.git"
  },
  "nativePackage": true,
  "bugs": {
    "url": "https://github.com/wix/Detox/issues"
  },
  "homepage": "https://github.com/wix/Detox#readme",
  "main": "./src/index.js",
  "author": "Tal Kol <talkol@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "node scripts/build.js",
    "lint": "eslint runners src scripts",
    "unit": "jest --coverage --verbose",
    "pretest": "npm run lint",
    "test": "npm run unit",
    "unit:watch": "jest --watch",
    "prepublish": "npm run build",
    "postinstall": "node scripts/postinstall.js"
  },
  "devDependencies": {
    "eslint": "^4.11.0",
    "eslint-plugin-node": "^6.0.1",
    "jest": "24.x.x",
    "mockdate": "^2.0.1",
    "prettier": "1.7.0",
    "react-native": "0.56.0",
    "wtfnode": "^0.8.0"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "bunyan-debug-stream": "^1.1.0",
    "chalk": "^2.4.2",
    "child-process-promise": "^2.2.0",
    "fs-extra": "^4.0.2",
    "get-port": "^2.1.0",
    "ini": "^1.3.4",
    "lodash": "^4.17.5",
    "minimist": "^1.2.0",
    "proper-lockfile": "^3.0.2",
    "sanitize-filename": "^1.6.1",
    "shell-utils": "^1.0.9",
    "tail": "^2.0.0",
    "telnet-client": "0.15.3",
    "tempfile": "^2.0.0",
    "ws": "^1.1.1",
    "yargs": "^13.0.0",
    "yargs-parser": "^13.0.0"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/__tests__/setupJest.js"
    ],
    "testEnvironment": "node",
    "roots": [
      "node_modules",
      "src",
      "local-cli"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "local-cli/test.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "__tests__",
      "local-cli/utils",
      "src/artifacts/log",
      "src/artifacts/screenshot",
      "src/artifacts/video",
      "src/server/DetoxServer.js",
      ".*Driver.js",
      "EmulatorTelnet.js",
      "Emulator.js",
      "DeviceDriverBase.js",
      "GREYConfiguration.js",
      "src/utils/environment.js",
      "src/utils/logger.js",
      "src/utils/onTerminate.js",
      "src/utils/pipeCommands.js",
      "src/utils/sleep.js",
      "AAPT.js",
      "ADB.js",
      "fsext.js",
      "debug.js",
      "src/ios/earlgreyapi",
      "src/android/espressoapi",
      "appdatapath.js",
      ".test.js",
      ".mock.js"
    ],
    "resetMocks": true,
    "resetModules": true,
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
