{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "target": "ES2015",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "detox"]
  },
  "files": [
    "detox.config.js",
    "types/detox-jest-circus-setup-tests.ts",
    "types/detox-global-tests.ts",
    "types/detox-module-tests.ts",
    "types/detox-jest-setup-tests.ts",
    "types/detox-mocha-setup-tests.ts"
  ]
}
